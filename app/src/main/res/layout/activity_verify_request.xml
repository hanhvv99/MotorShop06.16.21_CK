<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".warranty.act.VerifyRequestActivity">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác minh thông tin"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImgVProduct"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/iconxe"/>

        <TextView
            android:id="@+id/frameNums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="số khung"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vui lòng nhập đầy đủ thông tin bên dưới để yêu cầu bảo hành:"
                android:textColor="@color/black"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Họ tên:"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/EditTextName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:inputType="text"
                android:background="@drawable/background_shape_edit"
                android:textColor="#000"
                android:enabled="true"
                android:hint="Input Name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="CMND:"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/EditTextIdentityId"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:inputType="number"
                android:background="@drawable/background_shape_edit"
                android:textColor="#000"
                android:hint="Input Identity"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Số điện thoại:"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/EditTextPhone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:inputType="phone"
                android:background="@drawable/background_shape_edit"
                android:textColor="#000"
                android:hint="Input Phone Numbers"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Địa chỉ:"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/EditTextAddress"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:inputType="text"
                android:background="@drawable/background_shape_edit"
                android:textColor="#000"
                android:hint="Input Address"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nội dung yêu cầu: (Nếu có)"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/EditTextNotes"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:textSize="15dp"
                android:maxLines="3"
                android:inputType="text"
                android:background="@drawable/background_shape_edit"
                android:textColor="#000"
                android:hint="Input Note"/>

            <Button
                android:id="@+id/btnSendInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_send"
                android:text="Yêu cầu bảo hành"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>